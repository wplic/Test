<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMapConfig PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<sqlMapConfig>

	<properties resource="config/cmsJdbc.properties"/>
	
	<settings
	cacheModelsEnabled="true"
	enhancementEnabled="true"
	lazyLoadingEnabled="true"
	maxRequests="128"
	maxSessions="64"
	maxTransactions="8"
	useStatementNamespaces="true" />
	
	<transactionManager type="JDBC">
	<dataSource type="DBCP">
	  <property name="JDBC.Driver" value="${driver}"/>
	  <property name="JDBC.ConnectionURL" value="${url}"/>
	  <property name="JDBC.Username" value="${username}"/>
	  <property name="JDBC.Password" value="${password}"/>
	  <property name="Pool.MaximumActiveConnections" value="15"/>
	  <property name="Pool.MaximumIdleConnections" value="5"/>
	  <property name="Pool.MaximumWait" value="60000"/>
	</dataSource>
	</transactionManager>

	<sqlMap resource="com/css/persistence/ibatis/Ibatis_ObjectIdFactory.xml"/>
	<sqlMap resource="com/css/cms/category/impl/dao/Ibatis_Category.xml"/>
	<sqlMap resource="com/css/cms/document/dao/Ibatis_DocCategoryDAO.xml"/>
	<sqlMap resource="com/css/cms/document/dao/Ibatis_DocAttributeDAO.xml"/>
	<sqlMap resource="com/css/cms/document/dao/Ibatis_DocBodyDAO.xml"/>
	<sqlMap resource="com/css/attr/impl/SQL_DBConfHelper.xml"/>
</sqlMapConfig>
