<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
		"http://www.ibatis.com/dtd/sql-map-2.dtd">

<!-- iBatis SQL Map 文件 -->
<sqlMap namespace="com.cssweb.branchcomp.pojo.Department">

	<typeAlias alias="Department" type="com.cssweb.branchcomp.pojo.Department" />

	<resultMap id="DepartmentMap" class="Department">
		<result property="id" column="ID" jdbcType="Long"/>
		<result property="deptName" column="DEPT_NAME" jdbcType="String"/>
		<result property="deptPhone" column="DEPT_PHONE" jdbcType="String"/>
		<result property="deptFax" column="DEPT_FAX" jdbcType="String"/>
		<result property="deptSeat" column="DEPT_SEAT" jdbcType="String"/>
		<result property="deptAddress" column="DEPT_ADDRESS" jdbcType="String"/>
		<result property="deptIntro" column="DEPT_INTRO" jdbcType="String"/>
	</resultMap>
	
	
	
	<insert id="insertInfo" parameterClass="Department">
		INSERT INTO t_bc_department t (t.id,t.dept_name,t.dept_phone,t.dept_fax,t.dept_seat,t.dept_address,t.dept_intro) 
VALUES  (seq_t_bc_department.NEXTVAL,#deptName#,#deptPhone#,#deptFax#,#deptSeat#,#deptAddress#,#deptIntro#)
	</insert>
	<delete id="deleteInfo" parameterClass="String">
		delete from t_bc_department where ID in (#value#)
	</delete>
	
	<update id="updateInfo" parameterClass="Department">
		update t_bc_department set DEPT_NAME=#deptName#,DEPT_PHONE=#deptPhone#,DEPT_FAX=#deptFax#,DEPT_SEAT=#deptSeat#,DEPT_ADDRESS=#deptAddress#,DEPT_INTRO=#deptIntro# WHERE ID=#id#
	</update>
	<select id="getAllInfo" resultMap="DepartmentMap">
		select * from t_bc_department
	</select>
	<select id="getInfoById" resultMap="DepartmentMap" parameterClass="Long">
		select * from t_bc_department where ID=#id#
	</select>
	
	
	 <select id="getByPagingMap" parameterClass="java.util.Map" resultMap = "DepartmentMap">
    	SELECT * FROM ( SELECT row_.*, ROWNUM rownum_ FROM ( $sql$ )
		row_ WHERE ROWNUM &lt;= #end# ) WHERE rownum_ &gt;#begin# ORDER BY ID DESC
  </select>
  
  <select id="getAllInfoCountByMap" parameterClass="java.util.Map" resultClass="int">
		$sql$
	</select>
</sqlMap>
