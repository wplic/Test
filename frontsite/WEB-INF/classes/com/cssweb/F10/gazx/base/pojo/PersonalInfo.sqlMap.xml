<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">
<!-- iBatis SQL Map 文件 -->
<sqlMap namespace="com.cssweb.F10.gazx.base.pojo.PersonalInfo">
<typeAlias alias="personalInfo"
		type="com.cssweb.F10.gazx.base.pojo.PersonalInfo" />
		 <!--result map-->
    <resultMap id="personalInfoMap" class="personalInfo">
        <result column="T_GRZB_ID" property="personalInfoId" jdbcType="Long" />
        <result column="XM" property="name" jdbcType="String" nullValue=""/>
        <result column="YWM" property="englishName" jdbcType="String" nullValue=""/>
        <result column="XB" property="gender" jdbcType="String" nullValue=""/>
        
        <result column="CSRQ" property="birthday" jdbcType="java.util.Date" nullValue="1900/01/01 00:00:00"/>
        
        <result column="XL" property="education" jdbcType="String" nullValue=""/>
        <result column="GJYDQ" property="country" jdbcType="String" nullValue=""/>
        <result column="SF" property="province" jdbcType="String" nullValue=""/>
        <result column="CS" property="city" jdbcType="String" nullValue=""/>
        <result column="DZ" property="address" jdbcType="String" nullValue=""/>
        <result column="YB" property="zipCode" jdbcType="String" nullValue=""/>
        <result column="DH" property="phone" jdbcType="String" nullValue=""/>
        <result column="CZ" property="fax" jdbcType="String" nullValue=""/>
        <result column="DZYJ" property="email" jdbcType="String" nullValue=""/>
        <result column="GRZY" property="website" jdbcType="String" nullValue=""/>
        <result column="JL" property="curriculumVitae" jdbcType="String" nullValue=""/>
    </resultMap>
     <!-- 根据员工ID取得员工信息返回PersonalInfo对象 -->
    <select id="getPersonalInfo"  resultMap="personalInfoMap" >    
	    SELECT T_GRZB_ID,XM,YWM,XB,XL,CSRQ,GJYDQ,SF,CS,DZ,YB,DH,CZ,DZYJ,GRZY,JL
		FROM  GRZB 
			  where scbz='0' and gkbz='1' and T_GRZB_ID=#personalInfoId#
	</select>
</sqlMap>     