<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
		"http://www.ibatis.com/dtd/sql-map-2.dtd">
		
<!-- iBatis SQL Map 文件 -->
<sqlMap namespace="com.cssweb.hr.pojo.HrUserBearward">
				 
	<typeAlias alias="HrUserBearward" type="com.cssweb.hr.pojo.HrUserBearward"/>
								
	<!--result map-->
	<resultMap id="resultMap" class="HrUserBearward">
		<result property="id" column="ID" jdbcType="Long"/>
 		<result property="userId" column="USER_ID" jdbcType="Long"/>
 		<result property="startTimeYear" column="STARTTIME_YEAR" jdbcType="String"/>
 		<result property="startTimeMonth" column="STARTTIME_MONTH" jdbcType="String" />
 		<result property="awardName" column="AWARDNAME" jdbcType="String" />
 		<result property="awardOrg" column="AWARDORG" jdbcType="String" />
 		<result property="awardLever" column="AWARDLEVER" jdbcType="String" />
 		
 	</resultMap>
 	
  	<insert id="insert" parameterClass="HrUserBearward">
		<![CDATA[
		 insert into T_HR_USER_BEARAWARD(ID,USER_ID,STARTTIME_YEAR,STARTTIME_MONTH,
		 		AWARDNAME,AWARDORG,AWARDLEVER)
		 	 values(#id#,#userId#,#startTimeYear#,#startTimeMonth#,#awardName#,#awardOrg#,
		 		#awardLever#)
		]]>
	</insert>
	
	<update id="update" parameterClass="HrUserBearward">
		update T_HR_USER_BEARAWARD
		 set 
		 	USER_ID=#userId#,STARTTIME_YEAR=#startTimeYear#,STARTTIME_MONTH=#startTimeMonth#,
		 	AWARDNAME=#awardName#,AWARDORG=#awardOrg#,sAWARDLEVER=#awardLever#
		where ID = #id#
	</update>
	
	<delete id="delete" parameterClass="Long">
		delete from T_HR_USER_BEARAWARD where USER_ID = #userId#
	</delete>
	
	<select id="getAllWorkList" parameterClass="Long" resultMap="resultMap">
   		select 
   			*
		    from T_HR_USER_BEARAWARD 
		    where 
		     user_id=#userId#
		     order by STARTTIME_YEAR desc,STARTTIME_MONTH desc
   </select>
   
	<select id="getBeanById" parameterClass="Long" resultMap="resultMap">
   		select 
   			*
		    from T_HR_USER_BEARAWARD 
		    where 
		     id=#id#
   </select>
   
   
</sqlMap>
