<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
		"http://www.ibatis.com/dtd/sql-map-2.dtd">
		
<!-- iBatis SQL Map 文件 -->
<sqlMap namespace="com.cssweb.hr.pojo.HrUserFamily">
				 
	<typeAlias alias="HrUserFamily" type="com.cssweb.hr.pojo.HrUserFamily"/>
								
	<!--result map-->
	<resultMap id="resultMap" class="HrUserFamily">
		<result property="id" column="ID" jdbcType="Long"/>
 		<result property="userId" column="USER_ID" jdbcType="Long"/>
 		<result property="relationship" column="RELATIONSHIP" jdbcType="String"/>
 		<result property="name" column="NAME" jdbcType="String" />
 		<result property="jobUnit" column="JOBUNIT" jdbcType="String" />
 		<result property="position" column="POSITION" jdbcType="String" />
 		<result property="contactMode" column="CONTACTMODE" jdbcType="String" />
 		
 	</resultMap>
 	
  	<insert id="insert" parameterClass="HrUserFamily">
		<![CDATA[
		 insert into T_HR_USER_FAMILY(ID,USER_ID,RELATIONSHIP,NAME,
		 		JOBUNIT,POSITION,CONTACTMODE)
		 	 values(#id#,#userId#,#relationship#,#name#,#jobUnit#,#position#,
		 		#contactMode#)
		]]>
	</insert>
	
	<update id="update" parameterClass="HrUserFamily">
		update T_HR_USER_FAMILY
		 set 
		 	USER_ID=#userId#,RELATIONSHIP=#relationship#,NAME=#name#,
		 		JOBUNIT=#jobUnit#,POSITION=#position#,CONTACTMODE=#contactMode#
		where ID = #id#
	</update>
	
	<delete id="delete" parameterClass="Long">
		delete from T_HR_USER_FAMILY where USER_ID = #userId#
	</delete>
	
	<select id="getAllWorkList" parameterClass="Long" resultMap="resultMap">
   		select 
   			*
		    from T_HR_USER_FAMILY 
		    where 
		     user_id=#userId#
		     order by RELATIONSHIP
   </select>
   
	<select id="getBeanById" parameterClass="Long" resultMap="resultMap">
   		select 
   			*
		    from T_HR_USER_FAMILY 
		    where 
		     id=#id#
   </select>
   
   
</sqlMap>
