	<bean id="dataSourceWind" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
		<property name="driverClass" value="${jdbcWind.driverClassName}"/>
		<property name="jdbcUrl" value="${jdbcWind.url}"/>
		<property name="user" value="${jdbcWind.username}"/>
		<property name="password" value="${jdbcWind.password}"/>
		
		<property name="minPoolSize" value="10"/>
		<property name="maxPoolSize" value="20"/>
		<property name="maxIdleTime" value="20"/>
		<property name="acquireIncrement" value="1"/>
		<property name="maxStatements" value="0"/>
		<property name="initialPoolSize" value="1"/>
		<property name="idleConnectionTestPeriod" value="100000"/>
	</bean>
	
